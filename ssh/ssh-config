Include config.d/*

# Global
# ------------------------------------------------------------------------
Host *
  SendEnv LANG LC_*
  MACs hmac-md5,hmac-sha1
  ForwardX11 no
  ForwardAgent yes
  AddressFamily inet
  ServerAliveInterval 15
  ConnectTimeout 20
  IdentityFile ~/.ssh/id_ed25519

# GitHub
# ------------------------------------------------------------------------
Host github
  HostName github.com
  ForwardAgent yes

# Raspberry Pi
# ------------------------------------------------------------------------

Host ckx01.local
    User neo
    Hostname 192.168.0.2

Host ckx02.local
    User neo
    Hostname 192.168.0.3
